
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}


model User {
  id String @id @default(cuid())
  clerk String @unique
  email String @unique
  username String? @unique

  firstName String?
  lastName  String?
  imageUrl  String?


  bio  String? @db.VarChar(500)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

}

